<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartnotes">

    <!-- ✅ Required Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- WRITE_EXTERNAL_STORAGE only for Android 9 and below -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- ⚠️ READ_EXTERNAL_STORAGE deprecated on Android 13+, remove if not critical -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:label="Smart Notes"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartNotes">

        <!-- ✅ Splash Screen (Launcher) -->
        <activity
            android:name=".ui.ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartNotes.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Authentication -->
        <activity android:name=".ui.ui.LoginActivity" />
        <activity android:name=".ui.ui.RegisterActivity" />
        <activity android:name=".ui.ui.ForgotPasswordActivity" />

        <!-- ✅ Main App Screens -->
        <activity android:name=".ui.ui.MainActivity" />
        <activity android:name=".ui.ui.AddEditNoteActivity" />
        <activity android:name=".ui.ui.SettingsActivity" />

        <!-- ✅ Firebase Default Notification Setup -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/primary" />
    </application>

</manifest>
